<h1>Listing offers</h1>

<table>
  <tr>
    <th>User</th>
    <th>Dish</th>
    <th>Beginning time</th>
    <th>Ending time</th>
    <th>Limits</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @offers.each do |offer| %>
  <tr>
    <td><%= offer.user_id %></td>
    <td><%= offer.dish_id %></td>
    <td><%= offer.beginning_time %></td>
    <td><%= offer.ending_time %></td>
    <td><%= offer.limits %></td>
    <td><%= link_to 'Show', offer %></td>
    <td><%= link_to 'Edit', edit_offer_path(offer) %></td>
    <td><%= link_to 'Destroy', offer, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

